                    <div class="row align-items-center flex-row-reverse">
                        <div class="col-lg-6">
                            <div class="card-body">
                                <% for (let zg of zgs) { %>
                                <form action="/editfaculty" method="POST" class="row g-3 form-container">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
