                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mobile</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" name="fmob" class="form-control" value="<%=zg.fphone%>">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <button type="submit"
            class="btn btn-primary position-relative start-50 botttom-0 translate-middle-x">Save Changes</button>
                                    </div>
                                </div>
                            </form>
                            <% } %>
