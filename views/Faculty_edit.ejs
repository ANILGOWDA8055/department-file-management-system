                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Faculty ID</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" name="fid" class="form-control" value="<%= zg.fid%>">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" name="fmail" class="form-control" value="<%= zg.fmail%>">
                                    </div>
                                </div>

