        <form action="/addpcircular" method="POST" class="row g-3 form-container" enctype="multipart/form-data">
        <h3 style="text-align: center;" class="fw-bold">Placement Circular</h3>
            <div class="mb-3">
                <label for="ii" class="form-label">Name</label>
                <input id="ii" class="form-control" name="pcname" type="text" placeholder="Default input"
                    aria-label="default input example">
            </div>
            <div class="mb-3">
                <label for="jj" class="form-label">Date</label>
                <input id="jj" name="pcdate" class="form-control" type="date">
            </div>
            <div class="input-group mb-2">
                <input type="file" name="pcircular" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04"
                    aria-label="Upload">
            </div>
            <button type="submit"
            class="btn btn-primary position-relative start-50 botttom-0 translate-middle-x">Upload</button>
        </form>
