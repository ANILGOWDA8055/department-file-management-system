                <th scope="col">Name of the Circular</th>
                <th scope="col">Date</th>
                <th scope="col">View</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% var i = 1%>
            <% for (let zg of zgs) { %>
            <form action="/" method="POST" class="row g-3 form-container">
            <tr>
                <th scope="row"><%=i++%></th>
                <td><%= zg.cname%></td>
                <td><%= zg.cdate.toLocaleDateString()%></td>
                <td><a href="<%= zg.clink%>" button type="button" class="btn btn-success btn-sm">View</a></td>
                <td><input type="button" value="Delete" class="btn btn-danger" value="View"></input></td>
